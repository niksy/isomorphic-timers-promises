{
	"presets": [["@babel/preset-env", { "modules": false, "loose": true }]],
	"plugins": ["babel-plugin-native-error-extend"],
	"env": {
		"test": {
			"presets": [
				[
					"@babel/preset-env",
					{
						"modules": false,
						"loose": true,
						"useBuiltIns": "usage",
						"corejs": 2
					}
				]
			],
			"plugins": [
				"babel-plugin-transform-globalthis",
				[
					"@babel/plugin-transform-runtime",
					{
						"corejs": false,
						"helpers": true,
						"regenerator": false,
						"useESModules": true
					}
				]
			]
		}
	}
}
